{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "outDir": "out/",
        "declaration": true,
        "sourceMap": true,
        "lib": [
            "dom",
            "es5",
            "es2015.core",
            "es2015.promise",
            "es2015.collection"
        ],
        "types": ["node", "mocha", "chai"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "tests"
    ]
}